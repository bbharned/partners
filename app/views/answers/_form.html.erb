<%= render 'shared/errors', obj: @answer %>
<div class="row">
    <div class="col-sm-8 offset-sm-2">


    <h3><%= @question.question %></h3> 
    <br />
    <%= form_for(@answer, :html => {class: "form-horizontal", role: "form"}) do |f| %>

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.label "Answer" %>
                </div>
                <div class="col-sm-12">
                    <%= f.text_field :answer, class: "form-control", placeholder: "Enter Question Answer", autofocus: true %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.check_box :correct %>&nbsp;&nbsp;Is this answer correct?
                </div>
            </div>

         <br />

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.button "Submit", name: :question_id, value: @question.id, class: "btn btn-primary btn-sm" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", :back, style: "padding-top:12px;" %>
                </div>
            </div>
    <% end %>
    </div>
</div>
