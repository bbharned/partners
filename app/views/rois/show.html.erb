<div class="container" style="padding-bottom: 150px;">

<h1>ROI for <%= @roi.name %></h1>
<hr />

<p>
Capital Cost Saving:&nbsp;&nbsp;<%= number_to_currency(@roi.savings_capcost, :unit => @roi.currency.symbol, :separator => ".", :delimiter => ",",:format => "%u %n",  :negative_format => "%u - %n") %>
<br />
Preperation Cost Saving:&nbsp;&nbsp;<%= number_to_currency(@roi.savings_prepcost, :unit => @roi.currency.symbol, :separator => ".", :delimiter => ",",:format => "%u %n",  :negative_format => "%u - %n") %><br />
</p>


<!-- Button trigger modal -->
<div style="text-align: center;">
<button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#capitalcosts " style="margin:75px auto;">
  Show Calculations
</button>
</div>

<!-- Modal -->
<div class="modal fade" id="capitalcosts" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Workstation Capital Costs</h4>
        <div class="float-right">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
      </div>
      <div class="modal-body">
        <div class="tab-content">
	        <ul class="nav nav-tabs nav-fill" id="breakdownTabs" role="tablist">
			    <li role="presentation" class="nav-item"><a href="#pc" class="nav-link active" aria-controls="pc" role="tab" data-toggle="tab">PC Stations</a></li>
			    <li role="presentation" class="nav-item"><a href="#tc" class="nav-link" aria-controls="tc" role="tab" data-toggle="tab">Thin Clients & RDS</a></li>
			  </ul>
			<div role="tabpanel" class="tab-pane active tab-pane-modal" id="pc">
				<table border="1" cellpadding="2" width="100%">
					<tr>
						<td>Workstation PC Hardware</td>
						<td>(Hardware Count x Hardware Cost)</td>
						<td><%= @roi.planned_terminals %> x <%= @roi.pc_ave_cost %></td>
						<% @pcHardwareCosts = @roi.planned_terminals * @roi.pc_ave_cost %>
						<td><%= number_to_currency(@pcHardwareCosts, :unit => @roi.currency.symbol, :separator => ".", :delimiter => ",",:format => "%u %n",  :negative_format => "%u - %n") %></td>
					</tr>
					<tr>
						<td>Inventory Workstation PC Hardware</td>
						<td>(Hardware Count x Hardware Cost)</td>
						<td><%= @roi.pc_inventory_count %> x <%= @roi.pc_ave_cost %></td>
						<td></td>
					</tr>
				</table>
			</div>
			<div role="tabpanel" class="tab-pane tab-pane-modal" id="tc">
				<p>Something Else</p>
			</div>
	      </div>
	  </div>
    </div>
  </div>
</div>




</div>