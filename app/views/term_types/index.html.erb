<div class="container" style="padding-bottom: 100px;">

<div class="row">
	<div class="col-md-9">
		<h1>Hardware Boot Types</h1>
	</div>
	<div class="col-md-3">
		<div class="add_currency_btn"><%= link_to "Add Boot Type", new_term_type_path, class: "btn btn-primary" %></div>
	</div>
</div>
<hr />


<% if @termtypes.any? %>


<% @termtypes.each do |type| %>
	
	<div class="col-lg-6 offset-lg-3">
		<div class="well category-well">
			<h3 style="margin-bottom:0px;"><%= type.name %></h3>
			<p style="margin-bottom:10px;"><small><%= pluralize(type.hardwares.count, "hardware piece") %></small></p>
			<p><%= link_to "Edit", edit_term_type_path(type) %> &nbsp;&nbsp;|&nbsp;&nbsp; <%= link_to "Delete", term_type_path(type), method: :delete, data: {confirm: "Are you sure you want to delete this Hardware Boot Type?"}, style: "color:red;" %></p>
		</div>
	</div>

<% end %>

<% else %>

<p>There are currently no Hardware Boot Types created</p>

<% end %>

</div>