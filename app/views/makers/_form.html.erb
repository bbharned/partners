<div class="container">

<%= render 'shared/errors', obj: @maker %>



<%= form_for(@maker, :html => {class: "form-horizontal", role: "form"}) do |f| %>

            
        <div class="form-group">
            <div class="row">
            	<div class="col-12">
                    <div class="control-label"><%= f.label :name %></div>
                    <%= f.text_field :name, class: "form-control", placeholder: "Company Name" %>
                </div>    
            </div>
        </div>


        <div class="form-group">
            <div class="row">    
                <div class="col-6">
                    <div class="control-label"><%= f.label :logo_path %></div>
                    <%= f.text_field :logo_path, class: "form-control",  placeholder: "URL to Logo file" %>
                </div>   
                <div class="col-6">
                    <div class="control-label"><%= f.label "Company Web Address" %></div>
                    <%= f.text_field :url, class: "form-control",  placeholder: "Enter Company URL" %>
                </div>    
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-12">
                    <div class="control-label"><%= f.label "Company Bio" %></div>
                    <%= f.text_area :description, class: "form-control", rows: "8", placeholder: "Enter Quote Notes Here", tabindex: "20" %>
                </div>
            </div>    
        </div>

        <br />
        
        <div class="form-group">
            <%= f.submit(@maker.new_record? ? "Create Company" : "Update Company", class: "btn btn-primary btn-lg") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", :back %>
        </div>


<% end %>



</div>