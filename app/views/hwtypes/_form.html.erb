<div class="container">

<%= render 'shared/errors', obj: @type %>
<%= form_for(@type, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="col-md-8 offset-md-2">

            <div class="form-group">
                <div class="row">
                    <%= f.label :name %>
                </div>
                <div class="row">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Hardware Type  Name", autofocus: true %>
                </div>
            </div>
       

        <br />
        	<div class="row">
	            <%= f.submit(@type.new_record? ? "Create Type" : "Update Type", class: "btn btn-primary btn-lg") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", :back, style: "padding-top:12px;" %>
	        </div>
    <% end %>
    




</div>