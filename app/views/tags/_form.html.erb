<div class="container">

<%= render 'shared/errors', obj: @tag %>
<%= form_for(@tag, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="col-md-8 offset-md-2">

            <div class="form-group">
                <div class="row">
                    <%= f.label :name %>
                </div>
                <div class="row">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Tag or Keyword  Name", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="form-label"><%= f.label :description %></div>
                        <%= f.text_area :description, class: "form-control", rows: "8", placeholder: "Enter Description of Tag/Sub Group" %>
                </div>
                <div class="row" style="margin-top:15px;">
                    <div class="form-label"><%= f.label :image_link %></div>
                    <%= f.text_field :image_link, class: "form-control", placeholder: "Path to Image for Type" %>
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="row">
                    <div class="form-label"><%= f.label "Event Type:" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</div>
                    <div class="radio-buttons">
                        <% Evtcategory.all.each do |cat| %>
                          <%= f.radio_button :evtcategory_id, cat.id %>
                          <%= f.label :evtcategory_id, cat.name %>&nbsp;&nbsp;&nbsp;&nbsp;
                        <% end %>
                    </div>
                </div>
            </div>
       

        <br /><br />
        	<div class="row">
	            <%= f.submit(@tag.new_record? ? "Create Tag" : "Update Tag", class: "btn btn-primary btn-lg") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", :back, style: "padding-top:12px;" %>
	        </div>
    <% end %>
    




</div>