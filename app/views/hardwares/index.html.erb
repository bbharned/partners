<div style="width: 98%; margin: auto;">

	<div class="row">
		<div class="col-sm-9">
			<h3 style="margin-bottom:0px; padding-left: 25px;">ThinManager Hardware</h3>
		</div>
		<div class="col-sm-3">
			<% if logged_in? && (current_user.admin? || current_user.hw_admin?) %>
				<%= link_to "Add Hardware", new_hardware_path, class: "btn btn-sm btn-primary float-right" %>
			<% end %>
		</div>
	</div>

	<hr />



	<div class="hardware-container" style="padding-bottom:100px;">
		

		<%#
		  Filterrific adds the `form_for_filterrific` view helper:
		  * adds dom id 'filterrific_filter'
		  * applies javascript behaviors:
		      * AJAX form submission on change
		      * AJAX spinner while AJAX request is being processed
		  * sets form_for options like :url, :method and input name prefix
		%>
		
			
			<%= form_for_filterrific(@filterrific, :html => {class: "form-horizontal", role: "form"}) do |f| %>
					  
					<div class="form-group">
						
						<div class="row">
					  	
							  <div class="col-sm-4">
							    <div class="form-label">Search</div>
							    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
							    <%= f.text_field(
							      :search_query,
							      class: 'filterrific-periodically-observed form-control'
							    ) %>
							  </div>
							  <div class="col-sm-4">
							    <div class="form-label">Hardware Type</div>
							    <%= f.select(
							      :with_hwtype_id,
							      @filterrific.select_options[:with_hwtype_id],
							      { include_blank: '- Any -' }, class: "form-control"
							    ) %>
							  </div>
							  <div class="col-sm-4">
							    <div class="form-label">Hardware Brand</div>
							    <%= f.select(
							      :with_maker_id,
							      @filterrific.select_options[:with_maker_id],
							      { include_blank: '- Any -' }, class: "form-control"
							    ) %>
							  </div>
						</div>

						<div class="row">
							<div class="col-sm-4">
							   <div class="form-label">Hardware Status</div>
							   	<%= f.select(
							      :with_hwstatus_id,
							      @filterrific.select_options[:with_hwstatus_id],
							      { include_blank: '- Any -' }, class: "form-control"
							    ) %> 		
						    </div>
						    <div class="col-sm-4">
							   <div class="form-label">Minimum Firmware</div>
							   	<%= f.select(
							      :with_min_firmware,
							      @filterrific.select_options[:with_min_firmware],
							      { include_blank: '- Any -' }, class: "form-control"
							    ) %> 		
						    </div>
						    <div class="col-sm-4">
							   <div class="form-label">Maximum Firmware</div>
							   	<%= f.select(
							      :with_max_firmware,
							      @filterrific.select_options[:with_max_firmware],
							      { include_blank: '- Any -' }, class: "form-control"
							    ) %> 		
						    </div>
						</div>

						<div class="row" style="margin-top:10px;">
							<div class="col-sm-3 offset-sm-9">
							    <%= link_to 'Reset filters', reset_filterrific_url, class: "float-right" %>
							</div>
						</div>

					</div>
					<hr style="margin-top:15px; margin-bottom: 5px;" />
					<div class="form-group">
						<div class="row">
						  <div class="col-sm-4 offset-sm-8 sort-options">
						    <div class="form-label">Sorted by</div>
						    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], class: "form-control") %>
						  </div>
						  
						</div>
					</div>
					  
			<% end %>
				
			
			<div class="hw-loader"><%= render_filterrific_spinner %></div>

		<%= render(
		  partial: 'hardwares/list',
		  locals: { hardwares: @hardwares }
		) %>



	</div>


</div>