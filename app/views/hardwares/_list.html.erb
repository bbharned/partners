<div id="filterrific_results">

  

  <table>
    <tr>
      <th>Model</th>
      <th>Maker</th>
      <th>Type</th>
      <th>Created at</th>
    </tr>
    <% hardwares.each do |hardware| %>
      <tr>
        <td><%= link_to(hardware.model, hardware_path(hardware)) %></td>
        <td><%= hardware.maker.name %></td>
        <td><%= hardware.hwtype.name %></td>
        <td><%= hardware.created_at %></td>
      </tr>
    <% end %>
  </table>
</div>

