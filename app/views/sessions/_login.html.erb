
<div class="row">
    
    <div class="col-lg-6 offset-lg-3">
        <div class="well" style="border-radius:10px; padding:20px;">
        <h3>Log In</h3>
        <hr style="margin-bottom: 45px;"/>
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.email_field :email, class: "form-control",  placeholder: "Enter Email", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.password_field :password, class: "form-control",  placeholder: "Enter Password", autocomplete: "off" %>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <p align="right" style="margin-top:-13px; margin-bottom:10px; font-style:italic; padding-right: 15px;"><%= link_to "forgot password?", new_password_reset_path %></p>
                </div>
            </div>
            <br />
            
                <div class="col-sm-12" align="right">
                    <%= f.submit "Log In", class: 'btn btn-primary btn-lg' %>
                </div>

        <% end %>
        </div>
    </div>
</div>