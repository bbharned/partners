<div class="container page-container">
<div class="row">	
	<div class="col-md-9">
		<h1>Categories</h1>
	</div>
	<div class="col-md-3">
		<div class="add_currency_btn"><%= link_to "Add Category", new_category_path, class: "btn btn-primary" %></div>
	</div>
</div>
<hr />


<% if @categories.any? %>


<% @categories.each do |cat| %>
	
	<div class="col-lg-6 offset-lg-3">
		<div class="well category-well">
			<h3><%= cat.name %></h3>
			<p><%= link_to "Edit", edit_category_path(cat) %> &nbsp;&nbsp;|&nbsp;&nbsp; <%= link_to "Delete", category_path(cat), method: :delete, data: {confirm: "Are you sure you want to delete this Category?"}, style: "color:red;" %></p>
		</div>
	</div>

<% end %>

<% else %>

<p>There are currently no categories created</p>

<% end %>



</div>