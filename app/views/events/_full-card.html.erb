<div class="full-width-card">
	<div class="card-body">
		<p class="card-text">
			<div class="row">
				<div class="col-md-4">
					<%= link_to "#{event.name}", event_path(event) %>
				</div>
				<div class="col-md-3">
					<% if event.virtual %>
						Virtual Event
					<% else %>
						In-Person Event
					<% end %>
				</div>
				<div class="col-md-3">
					<%= event.starttime.strftime("%B %d, %Y") %>
				</div>
				<div class="col-md-2">
					<%= link_to "Learn More Â»", event_path(event), class: "btn btn-outline-primary btn-sm float-right"  %>
				</div>
			</div>
		</p>
	</div>
</div>