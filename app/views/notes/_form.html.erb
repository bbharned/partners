<%= render 'shared/errors', obj: @note %>


<div class="row">
	    <div class="col-md-10 offset-md-1">
		    <%= form_for(@note, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		    	<div class="form-group">
	                <div class="row">
	                    <div class="col-md-12">
	                        <div class="control-label"><%= f.label "Notes" %></div>
	                        <%= f.text_area :note, class: "form-control", rows: "12", placeholder: "Enter Terminal Notes Here" %>
	                    </div>
	                </div>    
	            </div>
<%= f.hidden_field :terminal_id, value: @terminal.Id %>
	            <div class="form-group">
		            <div class="row">
			            <div class="col-sm-6">
			                <%= f.submit(@note.new_record? ? "Save Note" : "Update Note", class: "btn btn-primary btn-md") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", :back %>
			            </div>
		            </div>
		        </div>
		    <% end %>
	</div>
</div>