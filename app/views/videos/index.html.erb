<div class="container" style="padding-bottom:100px;">
<div class="row">	
	<div class="col-md-9">
		<h1>Videos</h1>
	</div>
	<div class="col-md-3">
		<div class="add_currency_btn"><%= link_to "Add Video", new_video_path, class: "btn btn-primary" %></div>
	</div>
</div>
<hr />



<% if @videos.any? %>
	<div class="row" style="font-weight:bold; font-size: .9em; margin-bottom:7px;">
		<div class="col-md-4" style="padding-left:20px;">Name</div>
		<div class="col-md-5">Path</div>
	</div>
	<% @videos.each do |vid| %>

		<div class="well well-sm video-index-well">
			<div class="row">
				<div class="col-md-4"><%= link_to "#{vid.name}", video_path(vid) %></div>
				<div class="col-md-5"><%= vid.path %></div>
				<div class="col-md-2"><%= link_to "Edit Video Info", edit_video_path(vid) %></div>
				<div class="col-md-1"><%= link_to "Delete", video_path(vid), method: :delete, data: {confirm: "Are you sure you want to delete this video?"}, style: "color:red;" %></div>
			</div>
		</div>


	<% end %>
<% else %>
	<p>No Videos Currently Created</p>
<% end %>

</div>