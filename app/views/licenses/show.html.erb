<div class="container" style="padding-bottom: 100px;">

<div class="row">
	<div class="col-md-8">
		<h1>ThinManager License</h1>
	</div>
	<div class="col-md-4">
		<% if current_user.admin %>
			<div class="float-right">
				<%= link_to "Edit", edit_license_path(@license) %> | 
				<%= link_to "Delete", license_path(@license), method: :delete, data: {confirm: "Are you sure you want to delete this license?"}, style: "color:red;" %>
			</div>
		<% end %>
	</div>
</div>
<hr />



<div class="row">
	<div class="col-md-4">
		<h5>License Type</h5>
		<%= @license.license_type %>
	</div>
	<div class="col-md-4">
		<h5>Activation Type</h5>
		<%= @license.activation_type %>
	</div>
	<div class="col-md-4">
		<h5>Status</h5>
		<% if @license.approved %>
			Approved
		<% else %>
			Pending
		<% end %>
	</div>
</div>
<br />
<div class="row">
	<div class="col-md-4">
		<h5>License Number</h5>
		<%= @license.product_license %>
	</div>
	<div class="col-md-4">
		<% if @license.activation_type == "FTA" %>
			<h5>Serial Number</h5>
			<%= @license.serial_number %>
		<% end %>
	</div>
	<div class="col-md-4">
		<h5>Expiration Date</h5>
		<% if @license.enddate != nil && @license.enddate != '' %>
			<%= @license.enddate.strftime("%m/%d/%Y") %>
		<% else %>
			No Expiration Date
		<% end %>
	</div>
</div>
<br /><br />
<div class="row">
	<div class="col-md-12">
		<h5>Notes</h5>
		<%= simple_format(@license.note) %>
	</div>
</div>
<br />
<hr />
<div style="margin-top: 12px;"><%= link_to "Â« Back", :back %></div>

</div>