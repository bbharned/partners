<div class="container" style="padding-bottom: 150px;">

<div class="row">
	<div class="col-11">
		<h1>Licenses</h1>
	</div>
	<div class="col-1">
		<div class="add_currency_btn"><%= link_to "Users", users_path, class: "btn btn-primary" %></div>
	</div>
</div>
<hr />



<%= form_for_filterrific(@filterrific, :html => {class: "form-horizontal", role: "form"}) do |f| %>


	<div class="container listings-filters">			  
			<div class="form-group">
				
				<div class="row">
			  	
					  <div class="col-md-6" style="margin-bottom:10px;">
					    <div class="form-label">Search</div>
					    <%= f.text_field(
					      :license_search,
					      class: 'filterrific-periodically-observed form-control'
					    ) %>
					  </div>

					  <div class="col-md-6" style="margin-bottom:10px;">
						  <div class="form-label">License Status</div>
						    <%= f.select(
						      :with_approved,
						      @filterrific.select_options[:with_approved],
						      { include_blank: '- Any -' }, class: "form-control"
						    ) %>
					  </div>

				</div>
				<div class="row">

					  <div class="col-md-6" style="margin-bottom:10px;">
						  <div class="form-label">License Type</div>
						    <%= f.select(
						      :with_type,
						      @filterrific.select_options[:with_type],
						      { include_blank: '- Any -' }, class: "form-control"
						    ) %>
					  </div>

					  <div class="col-md-6" style="margin-bottom:10px;">
						  <div class="form-label">License Exp Status</div>
						    <%= f.select(
						      :with_exp,
						      @filterrific.select_options[:with_exp],
						      { include_blank: '- Any -' }, class: "form-control"
						    ) %>
					  </div>
					  

				</div>
				<div class="row" style="margin-top:10px;">
					<div class="col-sm-3 offset-sm-9">
					    <%= link_to 'Reset filters', reset_filterrific_url, class: "float-right" %>
					</div>
				</div>
			
			</div>

			<hr style="margin-top:25px; margin-bottom: 25px; border-color: #818181;" />

	</div>

	<div class="form-group" >
		<div class="row" style="margin-bottom: 35px;">
			<div class="col-md-8"><h4 style="padding-top:22px; margin-bottom: 0px;">Results</h4></div>	
			  <div class="col-md-4 sort-options">
			    <div class="form-label">Sorted by</div>
			    <%= f.select(:license_sorted, @filterrific.select_options[:license_sorted], class: "form-control") %>
		   </div>
		</div>
	</div>

<% end %>


<div class="hw-loader"><%= render_filterrific_spinner %></div>


<div class="col-12">

	<%= render(
		partial: 'licenses/list',
		locals: { licenses: @licenses }
	) %>

</div>





</div>

