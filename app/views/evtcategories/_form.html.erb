<div class="container">

<%= render 'shared/errors', obj: @etype %>
<%= form_for(@etype, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="col-md-8 offset-md-2">

            <div class="form-group">
                <div class="row">
                    <%= f.label :name %>
                </div>
                <div class="row">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Event Type Name", autofocus: true %>
                </div>
                <div class="row" style="margin-top:15px;">
                    <div class="form-label"><%= f.label :description %></div>
                    <%= f.text_area :description, class: "form-control", rows: "8", placeholder: "Enter Description of Category" %>
                </div>
                <div class="row" style="margin-top:15px;">
                    <div class="form-label"><%= f.label :image_link %></div>
                    <%= f.text_field :image_link, class: "form-control", placeholder: "Path to Image for Type" %>
                </div>
            </div>
       

        <br />
        	<div class="row">
	            <%= f.submit(@etype.new_record? ? "Create Type" : "Update Type", class: "btn btn-primary btn-lg") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", :back, style: "padding-top:12px;" %>
	        </div>
    <% end %>
    




</div>