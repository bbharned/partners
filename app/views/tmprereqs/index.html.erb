<div class="container" style="padding-bottom: 100px;">

<div class="row">
	<div class="col-md-9">
		<h1>Feature Prerequisites - Feature Matrix</h1>
	</div>
	<div class="col-md-3">
		<div class="float-right">
			<%= link_to "Add Prerequisite", new_tmprereq_path, class: "btn btn-md btn-primary" %>
		</div>
	</div>
</div>
<br /><br /> 

<% if @tmprereqs.any? %>
	
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th scope="col">Minimum Firmware Version Package Prerequisite</th>
	      <th scope="col">&nbsp;</th>
	    </tr>
	  </thead>
	  <tbody>

	<% @tmprereqs.each do |f| %>
		
		
		    <tr>
		      <th scope="row"><%= f.name %></th>
		      <td>
		      	<div class="float-right">
		      		<%= link_to "edit", edit_tmprereq_path(f) %> &nbsp;&nbsp;|&nbsp;&nbsp; 
		      		<%= link_to "delete", tmprereq_path(f), method: :delete, data: {confirm: "Are you sure you want to delete Feature Prerquisite?"}, style: "color:red;" %>
		      	</div>
		      </td>
		    </tr>
		  

	<% end %>

	  </tbody>
	</table>
<% else %>

<p>There no prerequisites saved yet. <%= link_to "Create one?", new_tmprereq_path %></p>

<% end %>

</div>