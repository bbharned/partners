<div class="container" style="padding-bottom: 100px;">

<div class="row">
	<div class="col-md-9">
		<h1>Hardware Test Statuses</h1>
	</div>
	<div class="col-md-3">
		<div class="add_currency_btn"><%= link_to "Add Status", new_hwstatus_path, class: "btn btn-primary" %></div>
	</div>
</div>
<hr />


<% if @statuses.any? %>


<% @statuses.each do |status| %>
	
	<div class="col-lg-6 offset-lg-3">
		<div class="well category-well">
			<h3 style="margin-bottom:0px;"><%= status.name %></h3>
			<p style="margin-bottom:10px;"><small><%= pluralize(status.hardwares.count, "hardware piece") %></small></p>
			<p><%= link_to "Edit", edit_hwstatus_path(status) %> &nbsp;&nbsp;|&nbsp;&nbsp; <%= link_to "Delete", hwstatus_path(status), method: :delete, data: {confirm: "Are you sure you want to delete this Hardware test status?"}, style: "color:red;" %></p>
		</div>
	</div>

<% end %>

<% else %>

<p>There are currently no Hardware Test Statuses</p>

<% end %>

</div>