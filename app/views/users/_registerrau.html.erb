<%= render 'shared/errors', obj: @user %>


<div class="row">
    <div class="col-sm-10 offset-sm-1">
    <%= form_for(@user, :url => {action: :signup_rau}, :html => {class: "form-horizontal", role: "form"}) do |f| %>

        
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6" style="margin-bottom: 20px;">
                        <div class="control-label col-sm-12">
                            <%= f.label :firstname %>
                        </div>
                        <div class="col-sm-12">
                            <%= f.text_field :firstname, class: "form-control", placeholder: "Enter First Name" %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="control-label col-sm-12">
                            <%= f.label :lastname %>
                        </div>
                        <div class="col-sm-12">
                            <%= f.text_field :lastname, class: "form-control",  placeholder: "Enter Last Name" %>
                        </div>
                    </div>
                </div>
            </div>
       

            <div class="form-group">
                <div class="row">
                    <div class="col-md-6" style="margin-bottom: 20px;">
                        <div class="control-label col-md-12">
                            <%= f.label :email %>
                        </div>
                        <div class="col-md-12">
                            <%= f.email_field :email, class: "form-control",  placeholder: "Enter Email Address" %>
                        </div>
                       
                    </div>
                     <% if @user.new_record? %>
                        <div class="col-md-6">
                            
                            <div class="control-label col-sm-12">
                                <%= f.label :email_confirmation %>
                            </div>
                            <div class="col-sm-12">
                                <%= f.email_field :email_confirmation, class: "form-control",  placeholder: "Re-enter Email Address" %>
                            </div>
                        </div>
                        <% end %>
                </div>
                
            </div>
                <br />
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="control-label col-md-12" style="font-weight: bold;">
                                <%= simple_format(@tm) %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <%= f.label "Distributor?" %>&nbsp;&nbsp;&nbsp;<%= f.check_box :distributor %>
                            </div>
                            <div class="col-md-3">
                                <%= f.label "Integrator?" %>&nbsp;&nbsp;&nbsp;<%= f.check_box :integrator %>
                            </div>
                            <div class="col-md-3">
                                <%= f.label "End User?" %>&nbsp;&nbsp;&nbsp;<%= f.check_box :end_user %>
                            </div>
                            <div class="col-md-3">
                                <%= f.label "OEM?" %>&nbsp;&nbsp;&nbsp;<%= f.check_box :oem %>
                            </div>
                        </div>
                    </div>
                </div>
           
            <br />
            <hr />
            <br />
            
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6" style="margin-bottom: 25px;">
                        
                            <div class="control-label col-sm-12">
                                <%= f.label :company %>
                            </div>    
                            <div class="control-label col-sm-12">
                                <%= f.text_field :company, class: "form-control",  placeholder: "Enter Company Name" %>
                            </div>
                        
                    </div>

                    <div class="col-md-6">
                        <div class="control-label col-sm-12">
                            <%= f.label "Channel Affiliation if any?" %>
                        </div>
                        <div class="col-md-12" style="margin-bottom: 20px;">
                            <%= f.select :channel, options_for_select([
                                  [""],
                                  ["Rockwell Automation"], 
                                  ["Aveva"],
                                  ["GE"]
                            ], @user.channel), class: "form-control", style: "" %>
                        </div>
                    </div>
                </div>
            </div>
            
            
            
            <br />
            <hr />
            <br />
             <div class="form-group">
                <div class="row">
                    <div class="col-md-6" style="margin-bottom: 20px;">
                        <div class="control-label col-sm-12">
                            <%= f.label :password %>
                        </div>
                        <div class="col-sm-12 password-field">
                            <%= f.password_field :password, class: "form-control",  placeholder: (@user.new_record? ? "Enter Password" : "New Password") %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="control-label col-sm-12">
                            <%= f.label :password_confirmation %>
                        </div>
                        <div class="col-sm-12 password-conf-field">
                            <%= f.password_field :password_confirmation, class: "form-control",  placeholder: (@user.new_record? ? "Re-Enter Password" : "Re-Enter new password") %>
                        </div>
                    </div>
                </div>
            </div>
        
        <br /><br />
        

        <div class="form-group">
            <div class="col-sm-12">
                <%= f.submit "Create Account", class: "btn btn-primary btn-lg" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", :back %>
            </div>
            
            
        </div>
    <% end %>
    </div>
</div>