<%= render 'shared/errors', obj: @user %>


<div class="row">
    <div class="col-sm-10 offset-sm-1">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <div class="control-label col-sm-12">
                            <%= f.label :firstname %>
                        </div>
                        <div class="col-sm-12">
                            <%= f.text_field :firstname, class: "form-control", placeholder: "Enter First Name" %>
                        </div>
                    </div>
                    <div class="col">
                        <div class="control-label col-sm-12">
                            <%= f.label :lastname %>
                        </div>
                        <div class="col-sm-12">
                            <%= f.text_field :lastname, class: "form-control",  placeholder: "Enter Last Name" %>
                        </div>
                    </div>
                </div>
            </div>
       

            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <div class="control-label col-md-12">
                            <%= f.label :email %>
                        </div>
                        <div class="col-md-12">
                            <%= f.email_field :email, class: "form-control",  placeholder: "Enter Email Address" %>
                        </div>
                       
                    </div>
                     <% if @user.new_record? %>
                        <div class="col">
                            
                            <div class="control-label col-sm-12">
                                <%= f.label :email_confirmation %>
                            </div>
                            <div class="col-sm-12">
                                <%= f.email_field :email_confirmation, class: "form-control",  placeholder: "Re-enter Email Address" %>
                            </div>
                        </div>
                        <% end %>
                </div>
                
            </div>
            <% if current_user.admin %>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <div class="control-label col-md-12">
                                <%= f.label "Account Active?" %>&nbsp;&nbsp;&nbsp;<%= f.check_box :active %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
            <br />
            <hr />
            <br />
            
            <div class="form-group">
                <div class="control-label col-sm-12">
                    <%= f.label :company %>
                </div>
                <div class="col-sm-12">
                    <%= f.text_field :company, class: "form-control",  placeholder: "Enter Company Name" %>
                </div>
            </div>
            <% if current_user.admin %>
            <div class="form-group">
                <div class="row">
                   <div class="col-md-6">
                        <div class="control-label col-sm-12">
                            <%= f.label "Type" %>
                        </div>
                        <div class="col-md-12" style="margin-bottom: 20px;">
                            <%= f.select :prttype, options_for_select([
                                  [""],
                                  ["Integrator"], 
                                  ["Distributor"]
                            ], @user.prttype), class: "form-control" %>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="control-label col-sm-12">
                            <%= f.label "SI Level" %>
                        </div>
                        <div class="col-md-12" style="margin-bottom: 20px;">
                            <%= f.select :silevel, options_for_select([
                                  [""],
                                  ["Certified"], 
                                  ["Platinum"]
                            ], @user.silevel), class: "form-control" %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="control-label col-sm-12">
                            <%= f.label "Channel" %>
                        </div>
                        <div class="col-md-12" style="margin-bottom: 20px;">
                            <%= f.select :channel, options_for_select([
                                  [""],
                                  ["Rockwell Automation"], 
                                  ["Wonderware"],
                                  ["GE"],
                                  ["Independent"]
                            ], @user.channel), class: "form-control" %>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="control-label col-sm-12">
                            <%= f.label "Continent" %>
                        </div>
                        <div class="col-md-12" style="margin-bottom: 20px;">
                            <%= f.select :continent, options_for_select([
                                  [""],
                                  ["North America"], 
                                  ["Central America"],
                                  ["South America"],
                                  ["Europe"],
                                  ["Africa"],
                                  ["Asia"],
                                  ["Australia"]
                            ], @user.continent), class: "form-control" %>
                        </div>
                    </div>

                </div>
            </div>
            <% end %>
            <br />
            <hr />
            <br />
             <div class="form-group">
                <div class="row">
                    <div class="col">
                        <div class="control-label col-sm-12">
                            <%= f.label :password %>
                        </div>
                        <div class="col-sm-12 password-field">
                            <%= f.password_field :password, class: "form-control",  placeholder: (@user.new_record? ? "Enter Password" : "New Password") %>
                        </div>
                    </div>
                    <div class="col">
                        <div class="control-label col-sm-12">
                            <%= f.label :password_confirmation %>
                        </div>
                        <div class="col-sm-12 password-conf-field">
                            <%= f.password_field :password_confirmation, class: "form-control",  placeholder: (@user.new_record? ? "Re-Enter Password" : "Re-Enter new password") %>
                        </div>
                    </div>
                </div>
            </div>
        
        <br /><br />
        

        <div class="form-group">
            <div class="col-sm-12">
                <%= f.submit(@user.new_record? ? "Create User" : "Update User", class: "btn btn-primary btn-lg") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", root_path %>
            </div>
            
            
        </div>
    <% end %>
    </div>
</div>