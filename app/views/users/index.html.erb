<div class="container">


		<h1 class="page-header">All Partners</h1>
	
	<div class="right-to-center-button">
		<%= link_to "Create User", new_user_path, class: "btn btn-primary" %>
	</div>
	
<hr /><br />
	<div class="paginate">
		<%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: "justify-content-center") %>
	</div>
		<div class="row" style="padding-left: 7px; margin-bottom: 5px; font-weight:bold;">		
			<div class="col-md-3">
				Name
			</div>
			<div class="col-md-3">
				Company
			</div>
			<div class="col-md-2">
				Type
			</div>
			<div class="col-md-2">
				Channel
			</div>
			<div class="col-md-2 ">
				
			</div>
		</div>
	<% if @users.any? %>
	<% @users.each do |user| %>
		<div class="well well-space">
			<div class="row">
				
				<div class="col-md-3">
					<%= link_to "#{user.lastname}, #{user.firstname}", user_path(user) %>
				</div>
				<div class="col-md-3">
					<%= user.company %>
				</div>
				<div class="col-md-2">
					<%= user.prttype %>
				</div>
				<div class="col-md-2">
					<%= user.channel %>
				</div>
				<div class="col-md-2 delete-action">
					<%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this partner?"}, style: "color:red; font-size:.8em;" %>
				</div>
			</div>	
		</div>
		
	<% end %>
	<% end %>
<br /><br />
	<div class="paginate">
		<%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: "justify-content-center") %>
	</div>
</div>