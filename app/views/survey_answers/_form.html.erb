<%= render 'shared/errors', obj: @survey_answer %>
<div class="row">
    <div class="col-sm-8 offset-sm-2">


    <h3><%= @survey_question.question %></h3> 
    <br />
    <%= form_for(@survey_answer, :html => {class: "form-horizontal", role: "form"}) do |f| %>

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.label "Answer" %>
                </div>
                <div class="col-sm-12">
                    <%= f.text_field :answer, class: "form-control", placeholder: "Enter Question's Answer", autofocus: true %>
                </div>
            </div>
        
         <br />

            <div class="form-group">
                <div class="col-sm-12">
                    <%= f.button "Submit", name: :survey_question_id, value: @survey_question.id, class: "btn btn-primary btn-sm" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", :back, style: "padding-top:12px;" %>
                </div>
            </div>
    <% end %>
    </div>
</div>
