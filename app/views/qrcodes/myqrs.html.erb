<div class="container">

<div class="row">
		<div class="col-sm-8">
			<h1>My QR Codes</h1>
		</div>
		<div class="col-sm-4" style="padding-top:7px;">
			<%= link_to "Create QR Code", new_qrcode_path, class: "btn btn-primary btn-md float-right" %>
		</div>
	</div>
<hr />



<div class="paginate">
	<%= will_paginate(@qrcodes, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: "justify-content-center") %>
</div>


<% if @qrcodes.any? %>
	
	<div class="row" style="margin-bottom:7px;">
				
		<div class="col-md-12">
			<span style="padding-left:10px;"><b>QR Code Content</b></span>
		</div>
		

	</div>	





	<% @qrcodes.each do |qr| %>
		<div class="well well-space">
			<div class="row">
				
				<div class="col-md-10">
					<%= link_to "#{qr.content}", qrcode_path(qr) %>
				</div>
				<div class="col-md-1">
					<%= link_to "Edit", edit_qrcode_path(qr), class: "float-right", style: "font-size:.8em; padding-top:2px;" %>
				</div>
				<div class="col-md-1">
					<%= link_to "Delete", qrcode_path(qr), method: :delete, data: {confirm: "Are you sure you want to delete this QR Code?"}, style: "color:red; font-size:.8em; padding-top:2px;", class: "float-right" %>
				</div>
			</div>	
		</div>
		
	<% end %>
	
<% else %>

	<p>There are no QR Codes yet created.</p>

<% end %>
<br /><br />
<div class="paginate">
	<%= will_paginate(@qrcodes, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: "justify-content-center") %>
</div>
</div>