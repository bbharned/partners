<script>
(function(){
  
  "use strict";

  $('#previous-q, .quiz-submit-btn').css('display', 'none');
  
  var qPage = 1

  function checkPage(qPage) {  		
		
		if (qPage == 1) {
			$('.question-one').fadeIn(1000);
			$('.question-two, .question-three, .question-four, .quiz-submit-btn, #previous-q').css('display', 'none');
		}
		if (qPage == 2) {
			$('#previous-q, #next-q').css('display', 'inline');
			$('.question-two').fadeIn(1000);
			$('.question-one, .question-three, .question-four, .quiz-submit-btn').css('display', 'none');
		}
		if (qPage == 3) {
			$('#previous-q, #next-q').css('display', 'inline');
			$('.question-three').fadeIn(1000);
			$('.question-one, .question-two, .question-four, .quiz-submit-btn').css('display', 'none');
		}
		if (qPage == 4) {
			$('#previous-q, .quiz-submit-btn').css('display', 'inline');
			$('.question-four').fadeIn(1000);
			$('.question-one, .question-two, .question-three, #next-q').css('display', 'none');
		}
	
	};

	$('#previous-q').on('click', function() {
		qPage -= 1;
		checkPage(qPage);
	});

	$('#next-q').on('click', function() {
		qPage += 1;
		checkPage(qPage);
	});


})();
</script>

