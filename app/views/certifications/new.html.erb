<script>
(function(){
  
  "use strict";

  //$('#previous-q, .quiz-submit-btn').css('display', 'none');
  //$('#previous-q, .quiz-submit-btn').addClass('disappear');
  
  var qPage = 1

  function checkPage(qPage) {  		
		
		if (qPage == 1) {
			$('.question-one').fadeIn(1000);
			$('.question-two, .question-three, .question-four').css('display', 'none');
			$('#previous-q, .quiz-submit-btn').addClass('disappear');
			$('#next-q').removeClass('disappear');
		}
		if (qPage == 2) {
			//$('#previous-q, #next-q').css('display', 'inline');
			$('#previous-q, #next-q').removeClass('disappear');
			$('.quiz-submit-btn').addClass('disappear');
			$('.question-two').fadeIn(1000);
			$('.question-one, .question-three, .question-four').css('display', 'none');
		}
		if (qPage == 3) {
			//$('#previous-q, #next-q').css('display', 'inline');
			$('#previous-q, #next-q').removeClass('disappear');
			$('.quiz-submit-btn').addClass('disappear');
			$('.question-three').fadeIn(1000);
			$('.question-one, .question-two, .question-four').css('display', 'none');
		}
		if (qPage == 4) {
			$('#previous-q, .quiz-submit-btn').removeClass('disappear');
			$('.question-four').fadeIn(1000);
			$('.question-one, .question-two, .question-three').css('display', 'none');
			$('#next-q').addClass('disappear');
		}
	
	};

	$('#previous-q').on('click', function() {
		qPage -= 1;
		checkPage(qPage);
	});

	$('#next-q').on('click', function() {
		qPage += 1;
		checkPage(qPage);
	});


})();
</script>
