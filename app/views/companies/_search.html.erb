<div class="row company-search-box">
	<div class="col-md-4 offset-md-4">
		<%= form_tag(company_search_path, :mehtod => "get") do %>
			<div class="input-group">
				<%= search_field_tag :search, params[:search], placeholder: "search companies", class: "form-control" %>
				<div class="input-group-btn">
					<%= button_tag "Search", :class => 'btn btn-info glyphicon glyphicon-search', :sort => :name %>
				</div>
			</div>
		<% end %>
	</div>
</div>