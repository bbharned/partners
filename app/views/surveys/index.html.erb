<div class="container" style="padding-bottom: 100px;">

<div class="row">
	<div class="col-md-6">
		<h1>ThinManager Surveys</h1>
	</div>
	<div class="col-md-6">
		<div class="float-right-to-left" style="margin-top:12px;">
			<%= link_to "Create Survey", new_survey_path, class: "btn btn-sm btn-primary" %>
		</div>
	</div>
</div>
<hr />


<% if @surveys.any? %>
	<% @surveys.each do |s| %>
		<%= link_to "#{s.title}", survey_path(s) %><br />
	<% end %>
<% end %>



</div>