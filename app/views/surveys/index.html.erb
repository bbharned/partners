<div class="container" style="padding-bottom: 100px;">

<div class="row">
	<div class="col-md-6">
		<h1>ThinManager Surveys</h1>
	</div>
	<div class="col-md-6">
		<div class="float-right-to-left" style="margin-top:12px;">
			<%= link_to "Create Survey", new_survey_path, class: "btn btn-sm btn-primary" %>
		</div>
	</div>
</div>
<hr />


<%= form_for_filterrific(@filterrific, :html => {class: "form-horizontal", role: "form"}) do |f| %>


<div class="container">			  
			<div class="form-group">
				
				<div class="row">
			  	
					  <div class="col-md-4" style="margin-bottom:10px;">
					    <div class="form-label">Search</div>
					    <%= f.text_field(
					      :survey_search,
					      class: 'filterrific-periodically-observed form-control'
					    ) %>
					  </div>

					  

				</div>



				<div class="row" style="margin-top:10px;">
					<div class="col-sm-3 offset-sm-9">
					    <%= link_to 'Reset filters', reset_filterrific_url, class: "float-right" %>
					</div>
				</div>
			
			</div>

			<hr style="margin-top:25px; margin-bottom: 15px; border-color: #818181;" />

	</div>

	<div class="form-group" >
		<div class="row" style="margin-bottom: 15px;">
			<div class="col-8"><h4 style="padding-top:15px; margin-bottom: 0px;">Results</h4></div>	
			  <div class="col-4 sort-options">
			    <div class="form-label">Sorted by</div>
			    <%= f.select(:survey_sort, @filterrific.select_options[:survey_sort], class: "form-control") %>
		   </div>
		</div>
	</div>


<% end %>


</div>

<div class="wider-container" style="padding-bottom:100px;">

<div class="hw-loader"><%= render_filterrific_spinner %></div>

<%= render(
	partial: 'surveys/survey-row',
	locals: { surveys: @surveys }
) %>




</div>